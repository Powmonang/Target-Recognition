<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.defectscan.mapper.ImgDefectTypeMapper">
    <select id="findDefectType" parameterType="com.defectscan.entity.DefectType" resultType="com.defectscan.entity.DefectType">
        select * from defect_type
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
        </where>
    </select>

    <insert id="addDefectType" parameterType="com.defectscan.entity.DefectType">
        insert into defect_type values(#{id}, #{type}, #{content}, #{mark})
    </insert>

</mapper>